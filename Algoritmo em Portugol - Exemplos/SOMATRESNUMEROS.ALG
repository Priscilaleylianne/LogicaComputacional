algoritmo "SomaTresNumeros"
var
   num1, num2, num3, soma: inteiro
inicio
   // Solicita ao usuário os três números
   escreva("Digite o primeiro número: ")
   leia(num1)

   escreva("Digite o segundo número: ")
   leia(num2)

   escreva("Digite o terceiro número: ")
   leia(num3)

   // Realiza a soma dos três números
   soma := num1 + num2 + num3

   // Exibe o resultado
   escreval("A soma dos três números é: ", soma)
fimalgoritmo
